#!/bin/sh

if which svn &>/dev/null && svn info &>/dev/null; then
	VERSION="1.0-$(svn info | grep Revision | sed 's#Revision: ##')"
elif [ -e VERSION ]; then
	VERSION=$(cat VERSION 2>/dev/null)
else
	exit
fi

cat > seom.pc << EOF
Name: seom
Description: seom video capturing library
Version: ${VERSION}
Libs: -L${1}/${2} -lseom
Cflags: -I${1}/include
EOF
